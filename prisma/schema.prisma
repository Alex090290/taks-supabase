generator client {
  provider = "prisma-client-js"
  output   = "../generate/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  lastLogin DateTime? @map("last_login")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  Task Task[] @relation("RelatedUser")

  @@index([name])
  @@map("users")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String
  state       String   @default("draft")
  slug        String   @unique
  User        User?    @relation("RelatedUser", fields: [userId], references: [id])
  userId      String?  @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([title])
  @@map("tasks")
}

model Counter {
  id    String @id
  value Int

  @@map("counters")
}
